<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="build">
	<path id="build.classpath">
		<pathelement location="classes"/>
	</path>
	<target name="init">
		<mkdir dir="classes"/>
	</target>
	<target name="clean">
		<delete dir="classes"/>
	</target>
	<target depends="init" name="build">
		<javac srcdir="." destdir="classes" source="1.5" target="1.5" fork="yes">
			<classpath refid="build.classpath"/>
			<include name="Bills.java"/>
			<include name="ServiceStatus.java"/>
			<include name="CustomerServices.java"/>
			<include name="Users.java"/>
			<include name="Operations.java"/>
			<include name="UserActions.java"/>
			<include name="Services.java"/>
			<include name="Events.java"/>
			<include name="Abonents.java"/>
			<include name="Payments.java"/>
		</javac>
	</target>
</project>